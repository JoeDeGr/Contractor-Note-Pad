<h1> Welcome! </h1>

<p> Please fill out the form below to sign up to use our list builder!</p>
<% if @user.errors.any? %>
    <div id="errors">
        <h3>Sorry, There were a few errors:</h2>
        <ul>
            <% @user.errors.full_messages.each do |m|%>
                <li><%= m %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_tag users_path do %>
    <%= render partial: "/users/form"%>
    <div><%= submit_tag "Create User"%>
<% end %>
