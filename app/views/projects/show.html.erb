<h1><%= @project.name %></h1>
<div>Materials Total for this project: <%=@project.materials_total%></div>
<ul>
    <% if @project.punch_lists %>
        <% @project.punch_lists.each do |list|%>
            <li><%= link_to "#{list.name}", punch_list_path(list)%></li>
            <ul>
                <li>Workers assigned to tasks in this list: <%= list.workers_list%> </li>
                <li>Total Materials Cost: <%= list.materials_total %>
            </ul>
        <% end %>    
    <% else %>
        <H3>You dont have any Punch Lists for this Project yet!</h3>
    <% end %>

    <li> <%= render partial: '/punch_lists/form' %></li>    
</ul>

<%= link_to "Edit #{@project.name}", edit_project_path %><br>

<%= link_to "Home Page", user_path(@project.user_id)%>